<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
 android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.malakdianadewi.butang.menu"
    tools:showIn="@layout/app_bar_menu">

    <android.support.v7.widget.CardView

        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/kuning1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="11dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/txtincome"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/leter"
                android:gravity="center_horizontal"
                android:text="@string/hutang"
                android:textAlignment="center"
                android:textColor="@color/putih"
                android:textColorHint="@color/putih"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtexp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtincome"
                android:fontFamily="@font/leter"
                android:gravity="center_horizontal"
                android:text="@string/lunas"
                android:textAlignment="center"
                android:textColor="@color/putih"
                android:textColorHint="@color/putih"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtbl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtexp"
                android:fontFamily="@font/leter"
                android:gravity="center_horizontal"

                android:text="@string/total"
                android:textAlignment="center"
                android:textColor="@color/putih"
                android:textColorHint="@color/putih"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/income"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_below="@id/txtincome"
                android:fontFamily="@font/leter"
                android:gravity="center_horizontal"

                android:text="17000"
                android:textAlignment="center"
                android:textColor="@color/putih"
                android:textColorHint="@color/putih"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/expenses"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_below="@id/txtincome"
                android:layout_toRightOf="@id/income"
                android:fontFamily="@font/leter"
                android:gravity="center_horizontal"
                android:text="17000"
                android:textAlignment="center"
                android:textColor="@color/putih"
                android:textColorHint="@color/putih"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_below="@id/txtincome"
                android:layout_toRightOf="@id/expenses"
                android:fontFamily="@font/leter"
                android:gravity="center_horizontal"
                android:text="17000"
                android:textAlignment="center"
                android:textColor="@color/putih"
                android:textColorHint="@color/putih"
                android:textSize="26dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/biru">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>
