<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/birumuda"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay">

        <Button

            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bek">

        </Button>


    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/birumuda1">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addincome"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@color/ungu"
                android:text="@string/hutang"
                android:textColor="@color/putih" />

            <Button
                android:id="@+id/addexp"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@color/birumuda1"
                android:text="@string/lunas" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/birumuda1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:fontFamily="@font/leter"
                android:gravity="center"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/date"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/txtdate" />

            <Button
                android:id="@+id/calendar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/date"
                android:background="@drawable/calendar" />

            <TextView
                android:id="@+id/txtkategori"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/txtdate"
                android:fontFamily="@font/leter"
                android:gravity="center"
                android:text="Category"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_below="@id/txtdate"
                android:layout_toRightOf="@id/txtkategori" />

            <TextView
                android:id="@+id/txtjumlah"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/txtkategori"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/leter"
                android:gravity="center"
                android:text="Amount"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtjumlah"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@id/txtkategori"
                android:layout_toRightOf="@id/txtjumlah"
                android:inputType="number" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/birumuda1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtnote"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:fontFamily="@font/leter"
                android:gravity="center"
                android:text="Note"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtnote"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/txtnote"
                android:inputType="text" />

            <Button
                android:id="@+id/btncamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/edtnote"
                android:background="@drawable/camera" />

            <ImageView
                android:id="@+id/imgnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtnote"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button

        android:id="@+id/btnsave"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/kuning"
        android:fontFamily="@font/leter"
        android:text="Update"
        android:textColor="@color/putih"
        android:textSize="18dp"
        android:textStyle="bold" />


</LinearLayout>